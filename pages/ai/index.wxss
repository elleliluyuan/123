/* pages/ai/index.wxss */

.container {
  min-height: 100vh;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid var(--bg-surface);
  position: relative;
  z-index: 100;
  box-shadow: var(--shadow-card);
}

.header-left {
  width: 120rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-arrow {
  font-size: 40rpx;
  color: var(--text-primary);
  font-weight: bold;
}

.header-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.2;
}

.header-right {
  width: 60rpx;
  display: flex;
  justify-content: flex-end;
}

/* 对话容器 */
.chat-container {
  flex: 1;
  padding: 30rpx 0;
  padding-bottom: 160rpx;
}

.chat-messages {
  padding: 0 30rpx;
  max-width: 800rpx;
  margin: 0 auto;
}

/* 消息样式 */
.message {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--bg-surface);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: var(--shadow-card);
}

.user-message .message-avatar {
  background: var(--accent-yellow);
  margin-right: 0;
  margin-left: 20rpx;
  order: 2;
}

.avatar-icon {
  font-size: 36rpx;
}

.message-content {
  flex: 1;
  max-width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-message .message-content {
  order: 1;
}

.message-bubble {
  padding: 25rpx 30rpx;
  border-radius: var(--radius-large);
  position: relative;
  word-wrap: break-word;
  width: 100%;
  box-sizing: border-box;
  box-shadow: var(--shadow-card);
}

.ai-bubble {
  background: #FFFFFF;
  border: 1rpx solid var(--bg-surface);
}

.user-bubble {
  background: var(--accent-purple);
  color: var(--bg-canvas-white);
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: inherit;
}

/* 健康问题选项 */
.health-options {
  display: flex;
  flex-direction: row;
  gap: 15rpx;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
}

.health-option {
  flex: 1;
  background: var(--accent-blue);
  border: 2rpx solid var(--accent-blue);
  border-radius: var(--radius-large);
  padding: 20rpx 15rpx;
  transition: all 0.3s ease;
  text-align: center;
  min-width: 0;
  box-shadow: var(--shadow-card);
}

.health-option:active {
  background: var(--accent-green);
  border-color: var(--accent-green);
  transform: scale(0.95);
}

.option-text {
  font-size: 24rpx;
  color: var(--bg-canvas-white);
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 功能选项 */
.function-options {
  display: flex;
  flex-direction: row;
  gap: 10rpx;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
}

.function-option {
  flex: 1;
  background: var(--bg-surface);
  border: 1rpx solid var(--bg-surface);
  border-radius: var(--radius-large);
  padding: 20rpx 10rpx;
  transition: all 0.3s ease;
  text-align: center;
  min-width: 0;
  box-shadow: var(--shadow-card);
}

.function-option:active {
  background: var(--accent-yellow);
  border-color: var(--accent-yellow);
  transform: scale(0.95);
}

.function-option .option-text {
  font-size: 20rpx;
  color: var(--text-primary);
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

/* 加载状态 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 0;
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--text-secondary);
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.typing-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 底部输入区域 */
.input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-top: 1rpx solid var(--bg-surface);
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 1000;
  box-shadow: var(--shadow-soft);
}

.input-container {
  background: #FFFFFF;
  border: 2rpx solid var(--bg-surface);
  border-radius: var(--radius-large);
  padding: 15rpx 20rpx;
  box-shadow: var(--shadow-card);
  width: 100%;
  box-sizing: border-box;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.message-input {
  flex: 1;
  height: 50rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  outline: none;
  line-height: 50rpx;
}

.message-input::placeholder {
  color: var(--text-secondary);
}

.send-btn {
  width: 100rpx;
  height: 50rpx;
  background: var(--bg-surface);
  border-radius: var(--radius-medium);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: none;
  box-shadow: var(--shadow-button);
}

.send-btn.active {
  background: var(--accent-yellow);
}

.send-icon {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

.send-btn.active .send-icon {
  color: var(--text-primary);
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .header {
    padding: 15rpx 25rpx;
  }
  
  .header-title {
    font-size: 36rpx;
  }
  
  .back-arrow {
    font-size: 36rpx;
  }
  
  .chat-messages {
    padding: 0 25rpx;
  }
  
  .input-section {
    padding: 15rpx 25rpx;
    padding-bottom: calc(15rpx + env(safe-area-inset-bottom));
  }
  
  .health-options {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .function-options {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .function-option {
    min-width: auto;
  }
}