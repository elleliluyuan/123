/* pages/profile/index.wxss */
.container {
  min-height: 100vh;
  background-color: #FFF8F3;
  padding: 20rpx;
}

.page-header {
  padding: 20rpx 30rpx;
  text-align: left;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2C3E50;
}

.profile-content {
  padding: 20rpx;
}

.profile-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin: 0 auto 20rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  text-align: center;
  margin-bottom: 20rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-label {
  font-size: 28rpx;
  color: #999999;
}

.info-value {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
}