/* pages/add-pet/index.wxss */

/* 页面容器 */
.container {
  height: 100vh;
  background-color: transparent;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 44rpx 30rpx 10rpx 30rpx;
  background-color: transparent;
  position: relative;
  height: 88rpx;
  transform: translateY(-140rpx);
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 10;
  flex-shrink: 0;
  margin-left: -360rpx;
}

.header-left:active {
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  transform: scale(0.95);
}

.back-arrow {
  font-size: 40rpx;
  color: #2C3E50;
  font-weight: bold;
  line-height: 1;
}

.page-title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  text-align: center;
  white-space: nowrap;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

/* 表单内容 */
.form-content {
  flex: 1;
  padding: 10rpx 30rpx 20rpx 30rpx;
  overflow-y: auto;
  transform: translateY(-140rpx);
}

/* 表单卡片 */
.form-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 表单行 */
.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 60rpx;
}

.form-row:active {
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: 8rpx;
}

.form-label {
  font-size: 32rpx;
  color: #2C3E50;
  font-weight: 500;
  text-align: left;
  position: relative;
}


.form-value {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
  margin-left: 40rpx;
}

.value-text {
  font-size: 30rpx;
  color: #2C3E50;
  text-align: right;
}

.placeholder-text {
  font-size: 28rpx;
  color: #CCCCCC;
  text-align: right;
}

.arrow {
  font-size: 24rpx;
  color: #CCCCCC;
  margin-left: 16rpx;
}

/* 输入框 */
.input-field {
  font-size: 30rpx;
  color: #2C3E50;
  text-align: right;
  width: 100%;
}

.input-field::placeholder {
  color: #CCCCCC;
  font-size: 28rpx;
}

/* 单位文本 */
.unit-text {
  font-size: 30rpx;
  color: #666666;
  margin-left: 16rpx;
}

/* 头像上传 */
.avatar-upload {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.avatar-upload:active {
  transform: scale(0.95);
  background-color: #E8E8E8;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  font-size: 48rpx;
  color: #CCCCCC;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.gender-option:active {
  transform: scale(0.95);
}

.gender-option.selected {
  background-color: #4A90E2;
}

.gender-option.selected.female {
  background-color: #FF69B4;
}

.gender-icon {
  font-size: 32rpx;
  color: #CCCCCC;
}

.gender-option.selected .gender-icon {
  color: #FFFFFF;
}


/* 复选框组 */
.checkbox-group {
  display: flex;
  gap: 20rpx;
}

.checkbox-item {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  background-color: #F0F0F0;
  color: #666666;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  text-align: center;
  min-width: 100rpx;
}

.checkbox-item:active {
  transform: scale(0.95);
}

.checkbox-item.checked {
  background-color: #E8E8E8;
  color: #2C3E50;
  font-weight: 600;
}

.save-button {
  margin: -80rpx 30rpx 30rpx 30rpx;
  width: calc(100% - 60rpx);
  height: 96rpx;
  background: linear-gradient(135deg,rgb(234, 132, 6), #FF8E8E);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.save-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.save-button::after {
  border: none;
}