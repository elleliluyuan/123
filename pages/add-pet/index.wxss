/* pages/add-pet/index.wxss */

/* 页面容器 */
.container {
  height: 100vh;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 44rpx 30rpx 10rpx 30rpx;
  background: #FFFFFF;
  position: relative;
  height: 88rpx;
  transform: translateY(-140rpx);
  box-shadow: var(--shadow-card);
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 10;
  flex-shrink: 0;
  margin-left: -360rpx;
  border-radius: 50%;
}

.header-left:active {
  background: var(--bg-surface);
  transform: scale(0.95);
}

.back-arrow {
  font-size: 40rpx;
  color: var(--text-primary);
  font-weight: bold;
  line-height: 1;
}

.page-title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  text-align: center;
  white-space: nowrap;
  line-height: 1.2;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

/* 表单内容 */
.form-content {
  flex: 1;
  padding: 10rpx 30rpx 20rpx 30rpx;
  overflow-y: auto;
  transform: translateY(-140rpx);
}

/* 表单卡片 */
.form-card {
  background: #FFFFFF;
  border-radius: var(--radius-large);
  margin-bottom: var(--spacing-base);
  padding: var(--spacing-large);
  box-shadow: var(--shadow-card);
}

/* 表单行 */
.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 60rpx;
  padding: 16rpx 0;
  border-radius: var(--radius-small);
  transition: all 0.2s ease;
}

.form-row:active {
  background: var(--bg-surface);
}

.form-label {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
  text-align: left;
  position: relative;
}

.form-value {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
  margin-left: 40rpx;
}

.value-text {
  font-size: 30rpx;
  color: var(--text-primary);
  text-align: right;
  font-weight: 500;
}

.placeholder-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: right;
}

.arrow {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 16rpx;
}

/* 输入框 */
.input-field {
  font-size: 30rpx;
  color: var(--text-primary);
  text-align: right;
  width: 100%;
  font-weight: 500;
}

.input-field::placeholder {
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 单位文本 */
.unit-text {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-left: 16rpx;
  font-weight: 500;
}

/* 头像上传 */
.avatar-upload {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--bg-surface);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-card);
}

.avatar-upload:active {
  transform: scale(0.95);
  background: var(--accent-purple);
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  font-size: 48rpx;
  color: var(--text-secondary);
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: var(--bg-surface);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-card);
}

.gender-option:active {
  transform: scale(0.95);
}

.gender-option.selected {
  background: var(--accent-blue);
  box-shadow: var(--shadow-soft);
}

.gender-option.selected.female {
  background: var(--accent-purple);
}

.gender-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.gender-option.selected .gender-icon {
  color: var(--bg-canvas-white);
}

/* 复选框组 */
.checkbox-group {
  display: flex;
  gap: 20rpx;
}

.checkbox-item {
  padding: 16rpx 24rpx;
  border-radius: var(--radius-medium);
  background: var(--bg-surface);
  color: var(--text-secondary);
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  text-align: center;
  min-width: 100rpx;
  box-shadow: var(--shadow-card);
}

.checkbox-item:active {
  transform: scale(0.95);
}

.checkbox-item.checked {
  background: var(--accent-yellow);
  color: var(--text-primary);
  font-weight: 600;
  box-shadow: var(--shadow-soft);
}

.save-button {
  margin: -80rpx 30rpx 30rpx 30rpx;
  width: calc(100% - 60rpx);
  height: 96rpx;
  background: var(--accent-yellow);
  color: var(--text-primary);
  font-size: 32rpx;
  font-weight: 700;
  border-radius: var(--radius-large);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-soft);
}

.save-button:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-button);
}

.save-button::after {
  border: none;
}