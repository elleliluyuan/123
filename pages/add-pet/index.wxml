<!-- pages/add-pet/index.wxml -->
<view class="container">
  <!-- щб╡щЭвхд┤щГи -->
  <view class="page-header">
    <view class="header-left" catchtap="goBack">
      <text class="back-arrow">тА╣</text>
    </view>
    <text class="page-title">ц╖╗хКахоачЙй</text>
    <view class="header-right"></view>
  </view>

  <!-- шбихНХхЖЕхо╣ -->
  <scroll-view class="form-content" scroll-y="true" enhanced="true" show-scrollbar="false">
    
    <!-- хоачЙйхд┤хГП -->
    <view class="form-card">
      <view class="form-row" catchtap="uploadAvatar">
        <text class="form-label">хоачЙйхд┤хГП</text>
        <view class="avatar-upload">
          <image wx:if="{{petAvatar}}" src="{{petAvatar}}" class="avatar-image"></image>
          <view wx:else class="avatar-placeholder">
            <text class="camera-icon">ЁЯУ╖</text>
          </view>
        </view>
      </view>
    </view>

    <!-- хоачЙйхзУхРН -->
    <view class="form-card">
      <view class="form-row">
        <text class="form-label">хоачЙйхзУхРН</text>
        <view class="form-value">
          <input 
            class="input-field" 
            placeholder="ш╛УхЕехоачЙйхзУхРН" 
            value="{{petName}}" 
            bindinput="onNameInput"
            maxlength="20"
          />
        </view>
      </view>
    </view>

    <!-- хоачЙйхУБчзН -->
    <view class="form-card">
      <view class="form-row" catchtap="selectBreed">
        <text class="form-label">хоачЙйхУБчзН</text>
        <view class="form-value">
          <text class="value-text" wx:if="{{petBreed}}">{{petBreed}}</text>
          <text class="placeholder-text" wx:else>щАЙцЛйхУБчзН</text>
          <text class="arrow">></text>
        </view>
      </view>
    </view>

    <!-- хоачЙйцАзхИл -->
    <view class="form-card">
      <view class="form-row">
        <text class="form-label">хоачЙйцАзхИл</text>
        <view class="gender-selector">
          <view 
            class="gender-option {{petGender === 'хЕм' ? 'selected' : ''}}"
            catchtap="selectGender"
            data-gender="хЕм"
          >
            <text class="gender-icon">тЩВ</text>
          </view>
          <view 
            class="gender-option {{petGender === 'цпН' ? 'selected female' : ''}}"
            catchtap="selectGender"
            data-gender="цпН"
          >
            <text class="gender-icon">тЩА</text>
          </view>
        </view>
      </view>
    </view>

    <!-- хоачЙйчФЯцЧе -->
    <view class="form-card">
      <view class="form-row">
        <text class="form-label">хоачЙйчФЯцЧе</text>
        <view class="form-value">
          <picker mode="date" value="{{birthDate}}" bindchange="onBirthDateChange">
            <text class="value-text" wx:if="{{birthDate}}">{{birthDate}}</text>
            <text class="placeholder-text" wx:else>щАЙцЛйхоачЙйчФЯцЧе</text>
          </picker>
        </view>
      </view>
    </view>

    <!-- хоачЙйф╜УщЗН -->
    <view class="form-card">
      <view class="form-row">
        <text class="form-label">хоачЙйф╜УщЗН</text>
        <view class="form-value">
          <input 
            class="input-field" 
            placeholder="хблхЖЩхоачЙйф╜УщЗН" 
            value="{{petWeight}}" 
            bindinput="onWeightInput"
            type="digit"
            maxlength="5"
          />
          <text class="unit-text">kg</text>
        </view>
      </view>
    </view>

    <!-- хдЗц│и -->
    <view class="form-card">
      <view class="form-row">
        <text class="form-label">хдЗц│и</text>
        <view class="checkbox-group">
          <view 
            class="checkbox-item {{isNeutered ? 'checked' : ''}}"
            catchtap="toggleNeutered"
          >
            х╖▓ч╗ЭшВ▓
          </view>
          <view 
            class="checkbox-item {{isVaccinated ? 'checked' : ''}}"
            catchtap="toggleVaccinated"
          >
            х╖▓цЙУчЦлшЛЧ
          </view>
        </view>
      </view>
    </view>

  </scroll-view>

  <!-- ф┐ЭхнШцМЙщТо -->
  <button class="save-button" catchtap="savePet">ф┐ЭхнШ</button>
</view>