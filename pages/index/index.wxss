/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #FFF8F3;
  /* 精确计算底部间距，消除多余空白 */
  padding-bottom: calc(100rpx + max(env(safe-area-inset-bottom), 0rpx));
  padding-top: 80rpx; /* Adjusted for title alignment */
  /* 确保页面可以滚动 */
  overflow-y: auto;
  /* 确保内容区域充分利用屏幕空间 */
  box-sizing: border-box;
  /* 覆盖全局样式，确保左对齐 */
  display: flex !important;
  align-items: flex-start !important;
  justify-content: flex-start !important;
  flex-direction: column !important;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 30rpx 0;
  text-align: left !important;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2C3E50;
  text-align: left !important;
  display: block;
  width: auto;
}

/* 宠物切换标签 */
.pet-tabs {
  padding: 0 30rpx 20rpx;
}

.pet-tabs-scroll {
  white-space: nowrap;
}

.pet-tabs-container {
  display: flex;
  gap: 20rpx;
  padding: 0;
  align-items: center;
  justify-content: flex-start;
}

.pet-tab {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 16rpx 20rpx;
  border-radius: 25rpx;
  background-color: transparent;
  border: none;
  transition: all 0.3s ease;
  min-width: 80rpx;
  position: relative;
  white-space: nowrap;
}

.pet-tab.active {
  background-color: transparent;
  transform: none;
}

.pet-tab-name {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 400;
  line-height: 1;
  display: inline-block;
}

.pet-tab.active .pet-tab-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
}

.pet-tab-underline {
  width: 40rpx;
  height: 4rpx;
  background-color: #FF8C42;
  border-radius: 2rpx;
  margin-top: 8rpx;
  align-self: flex-start;
}

.add-pet-tab {
  background-color: transparent;
  border: 2rpx solid #4ECDC4;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  flex-grow: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  cursor: pointer;
}

.add-pet-tab:active {
  background-color: rgba(78, 205, 196, 0.1);
  transform: scale(0.95);
}

.add-pet-icon {
  font-size: 32rpx;
  color: #4ECDC4;
  font-weight: 600;
  line-height: 1;
}

/* 宠物信息卡片 */
.pet-info-card {
  margin: 0 30rpx 30rpx;
  background: linear-gradient(135deg, #FFF8F3, #FFF0E6);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 140, 66, 0.15);
  position: relative;
  overflow: hidden;
}

.pet-info-card::before {
  content: '';
  position: absolute;
  top: -30rpx;
  right: -30rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(45deg, #FF8C42, #FF6B6B);
  border-radius: 50%;
  opacity: 0.1;
}

.pet-info-content {
  display: flex;
  align-items: flex-start;
  gap: 30rpx;
}

.pet-avatar-section {
  flex-shrink: 0;
}

.pet-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.pet-emoji {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.pet-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pet-basic-info {
  display: flex;
  gap: 30rpx; /* Restored original gap */
  justify-content: flex-start; /* 左对齐 */
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999999;
  font-weight: 500;
  text-align: left;
}

.info-value {
  font-size: 26rpx;
  color: #2C3E50;
  font-weight: 600;
  text-align: left;
}

.pet-cute-phrase {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  border-left: 4rpx solid #FF8C42;
}

.phrase-text {
  font-size: 24rpx;
  color: #2C3E50;
  font-weight: 500;
  line-height: 1.4;
  text-align: left;
}

/* 首页内容 */
.home-content {
  padding: 0 30rpx 20rpx;
}

/* 日历卡片 */
.calendar-card {
  margin-bottom: 30rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  text-align: left;
}

.current-month {
  font-size: 28rpx;
  color: #FF8C42;
  font-weight: 500;
  text-align: left;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background-color: #FDFDFD;
  border: 1rpx solid #E8E8E8;
  font-size: 24rpx;
  color: #2C3E50;
  position: relative;
}

.calendar-day.today {
  background-color: #FFF0E6;
  border: 3rpx solid #FF8C42;
  box-shadow: 0 2rpx 8rpx rgba(255, 140, 66, 0.3);
}

.calendar-day.has-record {
  background-color: #E6F7FF;
  border: 2rpx solid #4ECDC4;
}

.calendar-day.abnormal {
  background-color: #FFEBEE;
  border: 3rpx solid #FF6B6B;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}


.day-number {
  font-size: 24rpx;
}

.poop-icon {
  font-size: 28rpx;
  margin-top: 4rpx;
}

/* 周总结卡片 */
.weekly-summary {
  background-color: #E0F7FA;
  border-left: 8rpx solid #00BCD4;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 188, 212, 0.15);
}

.summary-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #00BCD4;
  margin-right: 16rpx;
  text-align: left;
}

.summary-text {
  font-size: 28rpx;
  color: #3F51B5;
  line-height: 1.6;
  text-align: left;
}

/* 底部三频道导航 */
.bottom-channels {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #E8E8E8;
  display: flex;
  z-index: 9999;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  /* 精确控制底部间距，消除多余空白 */
  padding-bottom: max(env(safe-area-inset-bottom), 0rpx);
  /* 确保内容不被隐藏，但不增加额外高度 */
  min-height: 100rpx;
}

.channel-entry {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 10rpx;
  transition: all 0.3s ease;
  position: relative;
  /* 精确控制底部边距，消除多余空白 */
  margin-bottom: max(env(safe-area-inset-bottom), 0rpx);
  /* 确保内容垂直居中 */
  height: 100%;
}

.channel-entry.active {
  background-color: #FFF8F3;
}

.channel-entry.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #FF8C42;
  border-radius: 2rpx;
}

.channel-icon {
  font-size: 32rpx;
  margin-bottom: 2rpx;
  transition: all 0.3s ease;
  line-height: 1;
}

.channel-text {
  font-size: 20rpx;
  color: #999999;
  font-weight: 500;
  transition: all 0.3s ease;
  line-height: 1;
  transform: translateY(10rpx);
}

.channel-entry.active .channel-text {
  color: #FF8C42;
  font-weight: 600;
}