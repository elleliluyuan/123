/* index.wxss */
.container {
  min-height: 100vh;
  background-color: #FFF8F3;
  padding-bottom: 120rpx;
}

.page-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 宠物切换标签 */
.pet-tabs {
  margin: 0 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.pet-tab {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid transparent;
}

.pet-tab.active {
  background: #FFF8F3;
  border-color: #FF8C42;
}

.pet-tab-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.pet-tab-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.pet-tab.active .pet-tab-name {
  color: #FF8C42;
}

.add-button {
  width: 60rpx;
  height: 60rpx;
  background: #FF8C42;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.pet-info-card {
  margin: 0 40rpx 40rpx;
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B35 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.pet-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pet-emoji {
  font-size: 60rpx;
}

.pet-details {
  flex: 1;
  color: white;
}

.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.pet-info {
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
}

.pet-phrase {
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
}

.calendar-card,
.summary-card {
  margin: 0 40rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  background: #F8F8F8;
  position: relative;
}

.calendar-day.today {
  background: #FF8C42;
}

.calendar-day.today .day-number {
  color: white;
  font-weight: bold;
}

.calendar-day.has-record {
  background: #FFF8F3;
  border: 2rpx solid #FF8C42;
}

.calendar-day.has-record .day-number {
  color: #FF8C42;
  font-weight: bold;
}

.day-number {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.record-indicator {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
}

.record-icon {
  font-size: 16rpx;
}

.summary-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  border-top: 1rpx solid #E8E8E8;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.nav-item.active {
  color: #FF8C42;
}

.nav-icon {
  font-size: 40rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #666;
}

.nav-item.active .nav-text {
  color: #FF8C42;
  font-weight: bold;
}