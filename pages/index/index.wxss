/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #FFFFFF;
  /* 精确计算底部间距，消除多余空白 */
  padding-bottom: calc(100rpx + max(env(safe-area-inset-bottom), 0rpx));
  padding-top: 80rpx; /* Adjusted for title alignment */
  /* 确保页面可以滚动 */
  overflow-y: auto;
  /* 确保内容区域充分利用屏幕空间 */
  box-sizing: border-box;
  /* 覆盖全局样式，确保左对齐 */
  display: flex !important;
  align-items: flex-start !important;
  justify-content: flex-start !important;
  flex-direction: column !important;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 24rpx 0;
  text-align: center !important;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #000000;
  text-align: center !important;
  display: block;
  width: auto;
  line-height: 1.2;
  letter-spacing: -0.3rpx;
}

/* 宠物切换标签 */
.pet-tabs {
  padding: 0 24rpx 20rpx;
  transform: translateY(10rpx); /* 整体下移5rpx */
}

.pet-tabs-scroll {
  white-space: nowrap;
}

.pet-tabs-container {
  display: flex;
  gap: 20rpx;
  padding: 0;
  align-items: center;
  justify-content: center; /* 改为居中对齐 */
}

.pet-tab {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 16rpx 20rpx;
  border-radius: 25rpx;
  background-color: transparent;
  border: none;
  transition: all 0.3s ease;
  min-width: 80rpx;
  position: relative;
  white-space: nowrap;
}

.pet-tab.active {
  background-color: transparent;
  transform: none;
}

.pet-tab-name {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 400;
  line-height: 1;
  display: inline-block;
}

.pet-tab.active .pet-tab-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
}

.pet-tab-underline {
  width: 60rpx; /* 从40rpx拉长到60rpx */
  height: 4rpx;
  background-color: #FF8C42;
  border-radius: 2rpx;
  margin-top: 8rpx;
  align-self: center; /* 从flex-start改为center，让下划线居中 */
}

.add-pet-tab {
  background-color: transparent;
  border: 2rpx solid #4ECDC4;
  width: 38rpx; /* 调整为38rpx */
  height: 38rpx; /* 调整为38rpx */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  flex-grow: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  cursor: pointer;
}

.add-pet-tab:active {
  background-color: rgba(78, 205, 196, 0.1);
  transform: scale(0.95);
}

.add-pet-icon {
  font-size: 36rpx; /* 调整为36rpx */
  color: #4ECDC4;
  font-weight: 600;
  line-height: 1;
}

/* 宠物信息卡片 */
.pet-info-card {
  margin: 0 24rpx 32rpx;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 32rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
  width: calc(100% - 48rpx);
  box-sizing: border-box;
}

.pet-info-card::before {
  content: '';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 60rpx;
  height: 60rpx;
  background: #FFC107;
  border: 3rpx solid #000000;
  border-radius: 50%;
  opacity: 1;
}

.pet-info-content {
  display: flex;
  align-items: center;
  gap: 30rpx;
  justify-content: flex-start;
  width: 100%;
}

.pet-avatar-section {
  flex-shrink: 0;
}

.pet-avatar-large {
  width: 100rpx; /* 从120rpx减少到100rpx */
  height: 100rpx; /* 从120rpx减少到100rpx */
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.pet-emoji {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.pet-avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.pet-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pet-basic-info {
  display: flex;
  gap: 50rpx; /* 增加间距从30rpx到50rpx */
  justify-content: flex-start; /* 左对齐 */
  width: 100%; /* 确保占满整个宽度 */
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
  flex: 1; /* 让每个信息项平均分配空间 */
  min-width: 100rpx; /* 设置最小宽度 */
}

.info-label {
  font-size: 22rpx;
  color: #999999;
  font-weight: 500;
  text-align: left;
}

.info-value {
  font-size: 26rpx;
  color: #2C3E50;
  font-weight: 600;
  text-align: left;
}

.pet-cute-phrase {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  border-left: 4rpx solid #FF8C42;
}

.phrase-text {
  font-size: 24rpx;
  color: #2C3E50;
  font-weight: 500;
  line-height: 1.4;
  text-align: left;
}

/* 首页内容 */
.home-content {
  padding: 0 24rpx 20rpx;
}

/* 日历卡片 */
.calendar-card {
  margin: 0 24rpx 30rpx;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 32rpx;
  padding: 24rpx;
  width: calc(100% - 48rpx);
  box-sizing: border-box;
}

/* 星期标题 */
.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.weekday-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
}

.weekday-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #000000;
  text-align: center;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.month-arrow {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
}

.month-arrow:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.arrow-icon {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF8C42;
  line-height: 1;
}

.current-month {
  font-size: 32rpx;
  color: #2C3E50;
  font-weight: 600;
  text-align: center;
  flex: 1;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  justify-content: center;
  margin: 0 auto;
}

.calendar-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: #FFFFFF;
  border: 3rpx solid #000000;
  font-size: 24rpx;
  color: #000000;
  position: relative;
  transition: all 0.1s ease;
}

.calendar-day.today {
  background: #FFC107;
  border: 4rpx solid #000000;
  transform: translate(-2rpx, -2rpx);
}

.calendar-day.has-record {
  background: #FFFFFF;
  border: 3rpx solid #00BCD4;
}

.calendar-day.abnormal {
  background: #FFFFFF;
  border: 3rpx solid #FF4081;
}

.day-number {
  font-size: 24rpx;
}

.poop-icon {
  font-size: 28rpx;
  margin-top: 4rpx;
}

/* 周总结卡片 */
.weekly-summary {
  background-color: #FFFFFF;
  border: 4rpx solid #000000;
  padding: 30rpx;
  border-radius: 32rpx;
  margin: 0 24rpx 30rpx;
  width: calc(100% - 48rpx);
  box-sizing: border-box;
}

.summary-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  margin-right: 16rpx;
  text-align: left;
}

.summary-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  text-align: left;
}

/* 底部三频道导航 */
.bottom-channels {
  position: fixed;
  bottom: 16rpx;
  left: 24rpx;
  right: 24rpx;
  height: 100rpx;
  background-color: #2C2C2C;
  border: 4rpx solid #000000;
  border-radius: 32rpx;
  display: flex;
  z-index: 9999;
  padding: 0 40rpx;
  align-items: center;
  justify-content: space-between;
}

.channel-entry {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 80rpx;
  transition: all 0.1s ease;
  position: relative;
}

.channel-entry.active {
  /* 移除背景和边框，改为底部指示线 */
}

.channel-entry.active::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background-color: #FFFFFF;
  border-radius: 2rpx;
}

.channel-entry.active .channel-icon {
  color: #FFFFFF;
}

.channel-icon {
  font-size: 40rpx;
  transition: all 0.1s ease;
  line-height: 1;
  color: #FFFFFF;
}

/* 中间加号按钮 */
.add-button {
  width: 80rpx;
  height: 80rpx;
  background-color: #FF4081;
  border: 4rpx solid #000000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 10;
  transform: translateY(-30rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
}

.add-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1;
}