<!--index.wxml-->
<view class="container">
  <view class="page-header">
    <text class="page-title">完美💩记</text>
  </view>

  <view class="pet-info-card">
    <view class="pet-avatar">
      <text class="pet-emoji">🐕</text>
    </view>
    <view class="pet-details">
      <text class="pet-name">腿腿</text>
      <text class="pet-info">2岁 · 公 · 4.5kg</text>
      <text class="pet-phrase">热爱自然的拉屎大王</text>
    </view>
  </view>

  <view class="calendar-card">
    <text class="card-title">📅 便便日历</text>
    <view class="calendar-grid">
      <view class="calendar-day" wx:for="{{calendarDays}}" wx:key="*this">
        <text class="day-number">{{item}}</text>
      </view>
    </view>
  </view>

  <view class="summary-card">
    <text class="card-title">📊 本周总结</text>
    <text class="summary-text">本周记录正常，继续保持！</text>
  </view>

  <view class="bottom-nav">
    <view class="nav-item active">
      <text class="nav-icon">🏠</text>
      <text class="nav-text">首页</text>
    </view>
    <view class="nav-item" bindtap="goToRecord">
      <text class="nav-icon">📝</text>
      <text class="nav-text">记录</text>
    </view>
    <view class="nav-item">
      <text class="nav-icon">🤖</text>
      <text class="nav-text">问AI</text>
    </view>
  </view>
</view>