<!--pages/statistics/index.wxml-->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">统计分析</text>
  </view>

  <!-- 统计内容 -->
  <view class="stats-content">
    <view class="stats-card">
      <view class="stats-title">本周统计</view>
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-value">{{weeklyStats.totalRecords}}</text>
          <text class="stat-label">总记录数</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{weeklyStats.avgScore}}</text>
          <text class="stat-label">平均评分</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{weeklyStats.healthyRate}}%</text>
          <text class="stat-label">健康率</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{weeklyStats.abnormalCount}}</text>
          <text class="stat-label">异常次数</text>
        </view>
      </view>
    </view>

    <view class="stats-card">
      <view class="stats-title">本月统计</view>
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-value">{{monthlyStats.totalRecords}}</text>
          <text class="stat-label">总记录数</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{monthlyStats.avgScore}}</text>
          <text class="stat-label">平均评分</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{monthlyStats.healthyRate}}%</text>
          <text class="stat-label">健康率</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{monthlyStats.abnormalCount}}</text>
          <text class="stat-label">异常次数</text>
        </view>
      </view>
    </view>
  </view>
</view>