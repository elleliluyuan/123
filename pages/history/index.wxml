<!--pages/history/index.wxml-->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">历史记录</text>
  </view>

  <!-- 历史记录列表 -->
  <view class="history-list">
    <view class="history-item" wx:for="{{historyList}}" wx:key="id">
      <view class="history-date">{{item.date}}</view>
      <view class="history-details">
        <view class="detail-item">
          <text class="detail-label">宠物</text>
          <text class="detail-value">{{item.petName}}</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">形态</text>
          <text class="detail-value">{{item.shape}}</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">颜色</text>
          <text class="detail-value">{{item.color}}</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">健康评分</text>
          <text class="detail-value">{{item.healthScore}}分</text>
        </view>
      </view>
    </view>
    
    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{historyList.length === 0}}">
      <text class="empty-text">暂无历史记录</text>
    </view>
  </view>
</view>