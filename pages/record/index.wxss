/* pages/record/index.wxss */
.container {
  height: 100vh;
  background: #FFFFFF;
  padding: 20rpx;
  /* 精确计算底部间距，消除多余空白 */
  padding-bottom: calc(100rpx + max(env(safe-area-inset-bottom), 0rpx));
  /* 调整顶部间距，让标题与小程序按钮居中对齐 */
  padding-top: 80rpx;
  /* 确保内容区域充分利用屏幕空间 */
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  padding: 20rpx 30rpx 20rpx;
  text-align: left;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #000000;
  line-height: 1.2;
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
  padding: 0 30rpx; /* 与标题左对齐 */
}

/* 宠物选择器 */
.pet-selector {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  background-color: transparent;
  border-radius: 12rpx;
  margin: 0; /* 移除额外边距，与标题对齐 */
}

.pet-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  background: #FFFFFF;
  transition: all 0.1s ease;
}

.pet-option.selected {
  border-color: #000000;
  background: #FFC107;
  transform: translate(-2rpx, -2rpx);
}

.pet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  font-size: 40rpx;
}

.pet-emoji {
  font-size: 40rpx;
}

.pet-name {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
}

/* 标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 20rpx;
}

/* 日期时间选择器 */
.datetime-selector {
  display: flex;
  gap: 0;
  justify-content: flex-start;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background-color: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.picker-label {
  font-size: 28rpx;
  color: #000000;
  font-weight: 700;
}

.picker-value {
  font-size: 28rpx;
  color: #FFC107;
  font-weight: 700;
}

/* 便便形态选择器 */
.shape-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.poop-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  background-color: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  transition: all 0.1s ease;
  text-align: center;
}

.poop-item.selected {
  border-color: #000000;
  background: #FFC107;
  transform: translate(-2rpx, -2rpx);
}

.shape-icon {
  font-size: 60rpx;
  margin-bottom: 8rpx;
}

.shape-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.shape-desc {
  font-size: 22rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 颜色选择器 */
.color-selector {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #E8E8E8;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.color-item.selected {
  border-color: #FF8C42;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 66, 0.2);
}

.color-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.color-label {
  font-size: 24rpx;
  color: #000000;
  font-weight: 700;
}

/* 便便量选择器 */
.amount-selector {
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  border: 4rpx solid #000000;
}

.amount-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.amount-label {
  font-size: 32rpx;
  color: #FFC107;
  font-weight: 700;
}

.amount-slider {
  margin: 0 20rpx;
}

.amount-labels {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 20rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.amount-label-item {
  font-size: 24rpx;
  color: #999999;
}

/* 便便环境 */
.environment-selector {
  display: flex;
  gap: 20rpx;
}

.environment-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  background-color: #FFFFFF;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  transition: all 0.1s ease;
}

.environment-item.selected {
  border-color: #000000;
  background-color: #00BCD4;
  transform: translate(-2rpx, -2rpx);
}

.environment-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.environment-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
}

/* 异常症状 */
.symptoms-container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.symptom-tag {
  padding: 12rpx 8rpx;
  border: 4rpx solid #000000;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  color: #000000;
  font-size: 24rpx;
  font-weight: 700;
  transition: all 0.1s ease;
  position: relative;
  overflow: hidden;
  text-align: center;
  white-space: nowrap;
}

.symptom-tag.selected {
  border-color: #000000;
  background-color: #FF4081;
  transform: translate(-2rpx, -2rpx);
}

/* 影响因素 */
.factors-container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.factor-tag {
  padding: 12rpx 8rpx;
  border: 4rpx solid #000000;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  color: #000000;
  font-size: 24rpx;
  font-weight: 700;
  transition: all 0.1s ease;
  position: relative;
  overflow: hidden;
  text-align: center;
  white-space: nowrap;
}

.factor-tag.selected {
  border-color: #000000;
  background-color: #8BC34A;
  transform: translate(-2rpx, -2rpx);
}

/* 备注输入 */
.notes-input {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  background-color: #FFFFFF;
  font-size: 28rpx;
  color: #000000;
  line-height: 1.5;
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
}

.notes-input::placeholder {
  color: #999999;
}

/* 按钮区域 */
.button-section {
  display: flex;
  gap: 20rpx;
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.cancel-btn {
  flex: 1;
  padding: 24rpx;
  background-color: #FFFFFF;
  color: #000000;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  line-height: 1;
}

.save-btn {
  flex: 1;
  padding: 24rpx;
  background-color: #FFC107;
  color: #000000;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  line-height: 1;
}

/* 底部三频道导航 */
.bottom-channels {
  position: fixed;
  bottom: 16rpx;
  left: 24rpx;
  right: 24rpx;
  height: 100rpx;
  background-color: #2C2C2C;
  border: 4rpx solid #000000;
  border-radius: 32rpx;
  display: flex;
  z-index: 9999;
  padding: 0 40rpx;
  align-items: center;
  justify-content: space-between;
}

.channel-entry {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 80rpx;
  transition: all 0.1s ease;
  position: relative;
}

.channel-entry.active {
  /* 移除背景和边框，改为底部指示线 */
}

.channel-entry.active::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background-color: #FFFFFF;
  border-radius: 2rpx;
}

.channel-entry.active .channel-icon {
  color: #FFFFFF;
}

.channel-icon {
  font-size: 40rpx;
  transition: all 0.1s ease;
  line-height: 1;
  color: #FFFFFF;
}

/* 中间加号按钮 */
.add-button {
  width: 80rpx;
  height: 80rpx;
  background-color: #FF4081;
  border: 4rpx solid #000000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 10;
  transform: translateY(-30rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
}

.add-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1;
}

/* 移除文字样式，只保留图标 */