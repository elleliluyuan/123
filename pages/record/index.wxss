/* pages/record/index.wxss */
.container {
  min-height: 100vh;
  background-color: #FFF8F3;
  padding-bottom: 120rpx;
}

.page-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.form-section {
  margin: 0 40rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.datetime-selector {
  width: 100%;
}

.picker-item {
  width: 100%;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 2rpx solid #E8E8E8;
  text-align: center;
  box-sizing: border-box;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.shape-selector {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.poop-item {
  padding: 30rpx 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 2rpx solid #E8E8E8;
  text-align: center;
}

.poop-item.selected {
  background: #FFF8F3;
  border-color: #FF8C42;
}

.shape-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.shape-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.shape-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.color-selector {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.color-item {
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 2rpx solid #E8E8E8;
  text-align: center;
}

.color-item.selected {
  background: #FFF8F3;
  border-color: #FF8C42;
}

.color-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 auto 12rpx;
  border: 2rpx solid #E8E8E8;
}

.color-label {
  font-size: 24rpx;
  color: #333;
}

.amount-selector {
  padding: 20rpx 0;
}

.amount-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.amount-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF8C42;
}

.amount-slider {
  margin: 30rpx 0;
}

.amount-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.amount-label-item {
  font-size: 24rpx;
  color: #666;
}

.environment-selector {
  display: flex;
  gap: 20rpx;
}

.environment-item {
  flex: 1;
  padding: 30rpx 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 2rpx solid #E8E8E8;
  text-align: center;
}

.environment-item.selected {
  background: #FFF8F3;
  border-color: #FF8C42;
}

.environment-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.environment-text {
  font-size: 28rpx;
  color: #333;
}

.symptoms-container,
.factors-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.symptom-tag,
.factor-tag {
  padding: 16rpx 12rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border: 2rpx solid #E8E8E8;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.symptom-tag.selected,
.factor-tag.selected {
  background: #FFF8F3;
  border-color: #FF8C42;
  color: #FF8C42;
  font-weight: bold;
}

.notes-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 2rpx solid #E8E8E8;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.button-section {
  margin: 0 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.cancel-btn,
.save-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.cancel-btn {
  background: #F8F9FA;
  color: #666;
}

.save-btn {
  background: #FF8C42;
  color: white;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  border-top: 1rpx solid #E8E8E8;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.nav-item.active {
  color: #FF8C42;
}

.nav-icon {
  font-size: 40rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #666;
}

.nav-item.active .nav-text {
  color: #FF8C42;
  font-weight: bold;
}